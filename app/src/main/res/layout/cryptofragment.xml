<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:background="#FFC107"
    tools:context=".view.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/maison"
            android:layout_width="160sp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:text="@string/button_maison"
            android:textSize="20sp" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/appart"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:text="@string/button_appart"
            android:textSize="20sp" />

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/surf_reel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:text="@string/text_to_enter2"
            android:textSize="20sp"
            android:textColor="@color/black"
            />
        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/surface_rÃ©elle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/_00000"
            android:importantForAutofill="no"
            android:inputType="text"
            android:orientation="vertical"
            android:textColorHint="#546E7A"
            android:textSize="20sp" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/metre_carre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:text="@string/mcarre"
            android:textSize="20sp"
            android:textColor="@color/black"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/nb_piece"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:text="@string/nb_piece"
            android:textSize="20sp"
            android:textColor="@color/black"
            />
        <Space
            android:layout_width="5dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/nombre_piece"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/nb_pieces"
            android:importantForAutofill="no"
            android:inputType="text"
            android:minWidth="48dp"
            android:textColorHint="#546E7A"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/surf_terrain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:text="@string/text_to_enter1"
            android:textSize="20sp"
            android:textColor="@color/black"
            />
        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/surface_terrain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/_000000"
            android:importantForAutofill="no"
            android:inputType="text"
            android:minWidth="48dp"
            android:textColorHint="#546E7A"
            android:textSize="20sp" />
        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/metre_carre2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:text="@string/m"
            android:textSize="20sp"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="16dp" />

    <Button
        android:id="@+id/button_estimation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/estimation_button_text"

        android:textSize="20sp" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">


    <TextView
        android:id="@+id/output_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resultat"

        android:textSize="20sp"
        android:textColor="@color/black"

        />
        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="16dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo_univ_rouen_normandie_couleur"
        android:contentDescription="@string/logo_univ_de_rouen"
        />

</LinearLayout>